{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "maxProperties": 2,
    "required": [
        "$schema"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        }
    },
    "definitions": {
        "baseIdentifier": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "value"
                    ],
                    "properties": {
                        "value": {
                            "oneOf": [
                                {
                                    "type": "string"
                                }
                            ]
                        },
                        "schemeID": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "baseText": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^[^\\w]$": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "baseName": {
            "$ref": "#/definitions/baseText"
        },
        "baseDate": {
            "type": "string",
            "pattern": "^[0-9]{4}\\-[0-9]{2}\\-[0-9]{2}$"
        },
        "baseTime": {
            "type": "string",
            "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$"
        },
        "baseCode": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "required": [
                        "value"
                    ],
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "listID": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "baseIndicator": {
            "type": "boolean"
        },
        "baseAmount": {
            "type": "string",
            "pattern": "^([0-9]+)(\\.[0-9]+)? .+$"
        },
        "baseNumeric": {
            "type": "number"
        },
        "baseQuantity": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^([0-9]+)(\\.[0-9]+)? .+$"                            
                }
            ]
        },
        "baseBinaryObject": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "value"
                    ],
                    "properties": {
                        "mimeCode": {
                            "type": "string"
                        },
                        "encodingCode": {
                            "type": "string"
                        },
                        "uri": {
                            "type": "string"
                        },
                        "filename": {
                            "type": "string"
                        },
                        "content": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "baseMeasure": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^([0-9]+)(\\.[0-9]+)? .+$"                            
                }
            ]
        },
        "basePercent": {
            "type": "number"
        },
        "baseRate": {
            "type": "number"
        }
    }
}